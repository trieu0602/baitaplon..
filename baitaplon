int main()
{
    user *sv = new SinhVien; 
    HoatDong hd;
    DiemHoc dh;
    DiemRenLuyen drl;
    
    system("color 8F");
    int choice;
    do
    {
        system("cls");
        cout << "\n\t\t\t ---------------------------------------------------------------------------------------------";
        cout << "\n\t\t\t\t\t       || CHAO MUNG DEN VOI HE THONG QUAN LI SINH VIEN  ||";
        cout << "\n\t\t\t ---------------------------------------------------------------------------------------------";
        cout << "\n\n\t\t\t   -| Click: [1] Sinh vien | [2] Hoat dong | [3] Diem hoc | [4] Diem ren luyen | [5] Thoat |-";
        cout << "\n\n\t\t\tCLICK : ";
        cin >> choice;
        if (choice == 1)
        {
            sv->menu();
            
        }
        else if (choice == 2)
        {
            hd.nhap();
            hd.xuat();
            hd.Enter();
        }
        else if (choice == 3)
        {
            dh.nhap();
            dh.xuat();
            dh.Enter();
        }
        else if (choice == 4)
        {
            drl.nhap();
            drl.xuat();
            drl.Enter();

        }
        else if (choice == 5)
        {
            cout << "\n\n\t\t\t\t\t---------------------------";
            cout << "\n\t\t\t\t\t       >> Thoat <<";
            cout << "\n\t\t\t\t\t---------------------------";
            cin.get();

        }
    } while (choice != 5);
    return 0;
}
